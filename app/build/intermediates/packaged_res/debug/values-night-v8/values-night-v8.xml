<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="DangerButton" parent="DayNightTheme">
        <item name="backgroundTint">@color/dangerColor</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DayNightTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textViewStyle">@style/MyStyle </item>
    </style>
    <style name="MyStyle">
        <item name="android:textColor">@color/white </item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SuccessButton" parent="DayNightTheme">
        <item name="backgroundTint">@color/successColor</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>