<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"/>

    <LinearLayout
        android:id="@+id/ll_team1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_below="@+id/tv_title">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Team 1 Name"
            android:textColor="@color/fonts"
            android:textSize="18sp"
            android:layout_margin="8dp" />

        <EditText
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_team_1_name"
            android:textColor="@color/white"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:textColorHint="@color/white"
            android:layout_margin="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_team2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_team1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Team 2 Name"
            android:textColor="@color/fonts"
            android:textSize="18sp" />

        <EditText
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/enter_team_2_name"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_games"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_below="@+id/ll_team2">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Select Game"
            android:textColor="@color/fonts"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinner_games"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:hint="@string/enter_team_2_name"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:layout_margin="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_americal_football"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_below="@+id/ll_games"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="American FootBall Score"
            android:textColor="@color/fonts"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_americal_football_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:layout_marginRight="4dp"/>
            <Button
                android:id="@+id/btn_americal_football_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="2"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_americal_football_score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="3"
                android:layout_marginRight="4dp"/>
            <Button
                android:id="@+id/btn_americal_football_score6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="6"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_basketball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_below="@+id/ll_games"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BasketBall Score"
            android:textColor="@color/fonts"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_basketball_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:layout_marginRight="4dp"/>
            <Button
                android:id="@+id/btn_basketball_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="2"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_basketball_score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="3"
                android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_freestyle_wrestling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_below="@+id/ll_games"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Freestyle Wrestling Score"
            android:textColor="@color/fonts"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_freestyle_wrestling_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:layout_marginRight="4dp"/>
            <Button
                android:id="@+id/btn_freestyle_wrestling_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="2"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_freestyle_wrestling_score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="3"
                android:layout_marginRight="4dp"/>
            <Button
                android:id="@+id/btn_freestyle_wrestling_score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="4"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_freestyle_wrestling_score5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="5"
                android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_cricket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_below="@+id/ll_games"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket Score"
            android:textColor="@color/fonts"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_cricket_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:layout_marginRight="4dp"/>
            <Button
                android:id="@+id/btn_cricket_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="2"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_cricket_score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="3"
                android:layout_marginRight="4dp"/>
            <Button
                android:id="@+id/btn_cricket_score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="4"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btn_cricket_score6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_games"
                android:layout_centerHorizontal="true"
                android:text="6"
                android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>