<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DayNightTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textViewStyle">@style/MyStyle</item>

    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SuccessButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/successColor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DangerButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/dangerColor</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>